<h4 class="ui cneter aligned medium icon header">
  <i class="fa-regular fa-message circular orange icon"></i>
  Say Something
</h4>

<div class="ui tow column grid">


  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content" id="messages">
        <div class="ui feed" id="message-container">
          <h4 class="ui header center aligned">Messages:</h4>
          <%= render @messages %>
        </div>
      </div>
      <div class="extra centent">
        <%= form_for(@message, html: {class: "ui reply form", role: "form"}, url: message_path, remote: true) do |f| %>
          <div class="field">
            <div class="ui fluid icon input">
              <%= f.text_field :body  %>
              <%= f.button '<i class="bordered inverted orange edit icon"></i>'.html_safe %>
            </div>
          </div>
        <% end %>
        <form class=>
          <div class="field">
            <div class="">

            </div>
          </div>
        </form>
      </div>
    </div>
  </div>





  <div class="four wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui inverted vertical menu">
          <a class="active item">
            Home
          </a>
          <a class="item">
            Messages
          </a>
          <a class="item">
            Friends
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
